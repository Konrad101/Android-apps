<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".carsDetails.screens.CarGalleryScreen">

    <ScrollView
        android:id="@+id/gallerySV"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/galleryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <TextView
                android:id="@+id/galleryTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gallery"
                android:textAlignment="center"
                android:textColor="@color/superCarCard"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/firstCarPhotoIV"
                android:layout_width="match_parent"
                android:layout_height="285dp" />

            <ImageView
                android:id="@+id/secondCarPhotoIV"
                android:layout_width="match_parent"
                android:layout_height="285dp" />

            <ImageView
                android:id="@+id/thirdCarPhotoIV"
                android:layout_width="match_parent"
                android:layout_height="285dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>